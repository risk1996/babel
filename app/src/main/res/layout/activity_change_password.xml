<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:text="Change Password"
                android:textSize="25sp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                />
        </TableRow>
        <TableRow>
            <android.support.design.widget.TextInputLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true">
                <EditText
                    android:id="@+id/current_password_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Current Password"
                    android:inputType="textPassword"/>
            </android.support.design.widget.TextInputLayout>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/current_password_edit_error"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#ffbaba"
                android:textColor="#ff0000"
                android:visibility="gone"
                android:text="Password is incorrect"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/required_field_error_text_view"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#ffbaba"
                android:textColor="#ff0000"
                android:visibility="gone"
                android:text="@string/error_field_required"/>
        </TableRow>
        <TableRow>
            <android.support.design.widget.TextInputLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true">
                <EditText
                    android:id="@+id/new_password_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="New Password"
                    android:inputType="textPassword"/>
            </android.support.design.widget.TextInputLayout>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/new_password_edit_error"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#ffbaba"
                android:textColor="#ff0000"
                android:visibility="gone"
                android:text="Password must at least contain 8 characters"/>
        </TableRow>
        <TableRow>
            <android.support.design.widget.TextInputLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true">
                <EditText
                    android:id="@+id/confirm_new_password_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirm New Password"
                    android:inputType="textPassword"/>
            </android.support.design.widget.TextInputLayout>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/confirm_new_password_edit_error"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#ffbaba"
                android:textColor="#ff0000"
                android:visibility="gone"
                android:text="New passsword did not match"/>
        </TableRow>
        <TableRow>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <Button
                    android:id="@+id/change_password_button"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="Change Password"
                    android:textColor="@color/common_google_signin_btn_text_light"
                    android:textSize="18sp" />
                <Button
                    android:id="@+id/cancel_change_password_button"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="Cancel"
                    android:textColor="@color/common_google_signin_btn_text_light"
                    android:textSize="18sp" />
            </LinearLayout>
        </TableRow>
    </TableLayout>


</RelativeLayout>