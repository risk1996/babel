<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InOutFragment">
    <TableLayout
        android:id="@+id/fragment_in_out_items_tl_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableRow>
            <Spinner
                android:id="@+id/fragment_in_out_spn_locations"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/fragment_in_out_tv_direction"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textSize="32sp"
                android:textStyle="bold"/>
            <Spinner
                android:id="@+id/fragment_in_out_spn_purpose"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow>
            <ScrollView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/fragment_in_out_items_rv_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </ScrollView>
        </TableRow>
    </TableLayout>
</FrameLayout>